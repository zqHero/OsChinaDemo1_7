<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="35.0dip"
		android:orientation="horizontal" 
		android:gravity="center_vertical">
     	<Button 
     		android:id="@+id/frame_btn_tweet_lastest"
     		style="@style/frame_button"
         	android:text="@string/frame_title_tweet_lastest"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="fill_parent" android:background="@mipmap/frame_button_cutline"/>
     	<Button 
     		android:id="@+id/frame_btn_tweet_hot"
     		style="@style/frame_button"
         	android:text="@string/frame_title_tweet_hot"/>
	    <ImageView android:layout_width="wrap_content" android:layout_height="fill_parent" android:background="@mipmap/frame_button_cutline"/>
     	<Button 
     		android:id="@+id/frame_btn_tweet_my"
     		style="@style/frame_button"
         	android:text="@string/frame_title_tweet_my"/>
    </LinearLayout>
    
	<com.hero.zhaoq.oschinademo1_7.widget.PullToRefreshListView
	  	android:id="@+id/frame_listview_tweet"
	    style="@style/widget_listview"/>
	
</LinearLayout>